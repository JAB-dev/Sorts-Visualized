unit frmUpdate_u;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ToolWin, Vcl.ComCtrls, Vcl.OleCtrls,
  SHDocVw;

type
  TfrmUpdate = class(TForm)
    wbUpdate: TWebBrowser;
    procedure FormCreate(Sender: TObject);
    procedure wbUpdateDownloadBegin(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmUpdate: TfrmUpdate;

implementation

{$R *.dfm}

procedure TfrmUpdate.FormCreate(Sender: TObject);
begin
  wbUpdate.Navigate('https://github.com/JAB-dev/Sorts-Visualized/raw/Executable/Win32/Release/JABsVisualSorts.exe');
end;

procedure TfrmUpdate.wbUpdateDownloadBegin(Sender: TObject);
begin
  ShowMessage('Download started');
end;

end.
